@using MudBlazor
@using Microsoft.AspNetCore.Components.Authorization

<MudNavMenu>
    <!-- Lien Public : Accueil / Recherche -->
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Search">
        Recherche
    </MudNavLink>

    <!-- Lien Authentifié : Dashboard / Favoris -->
    <AuthorizeView>
        <Authorized>
            <MudNavLink Href="dashboard" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Dashboard">
                Mes Favoris
            </MudNavLink>
        </Authorized>
    </AuthorizeView>

    <!-- Lien Rôle "gestionnaire" (Ton ancien lien Todo) -->
    <AuthorizeView Roles="gestionnaire">
        <Authorized>
            <MudNavLink Href="todo" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.List">
                Tâches Gestionnaire
            </MudNavLink>
        </Authorized>
    </AuthorizeView>

    <!-- Lien Rôle "admin" (Pour le projet LoL) -->
    <AuthorizeView Roles="admin">
        <Authorized>
            <MudNavLink Href="admin" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.AdminPanelSettings">
                Administration
            </MudNavLink>
        </Authorized>
    </AuthorizeView>

</MudNavMenu>