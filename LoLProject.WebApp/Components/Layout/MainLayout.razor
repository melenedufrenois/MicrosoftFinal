@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex align-items-center justify-content-between">
            <a href="https://x.com/DemonRoubaisien" target="_blank" class="d-flex align-items-center gap-2 text-decoration-none">
                <i class="bi bi-info-circle"></i> <span class="d-none d-md-inline">DÃ©mon Roubaisien</span>
            </a>
            <div class="d-flex align-items-center">
                <AuthorizeView>
                    <Authorized Context="auth">
                        @{
                            var user = auth.User;
                            var name = user.Identity?.Name ?? "Invocateur";
                            var roles = user.Claims
                                .Where(c => c.Type == System.Security.Claims.ClaimTypes.Role)
                                .Select(c => c.Value)
                                .ToList();
                        }

                        <div class="me-4 text-end lh-1 d-none d-sm-block">
                            <div style="color: #f0e6d2; font-weight: bold;">@name</div>
                            @if (roles.Any())
                            {
                                <small style="color: #a09b8c; font-size: 0.75rem;">
                                    @string.Join(", ", roles).ToUpper()
                                </small>
                            }
                        </div>

                        <button class="btn btn-hextech-sm" @onclick="Logout">
                            <i class="bi bi-box-arrow-right"></i> DÃ©connexion
                        </button>
                    </Authorized>

                    <NotAuthorized>
                        <button class="btn btn-hextech-sm" @onclick="Login">
                            <i class="bi bi-person-circle"></i> Se connecter
                        </button>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>

        <div class="content-wrapper">
            <article class="content px-4">
                @Body
            </article>

            <footer class="hextech-footer">
                <div class="container text-center">
