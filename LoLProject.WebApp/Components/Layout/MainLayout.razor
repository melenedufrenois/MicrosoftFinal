@inherits LayoutComponentBase
@using MudBlazor
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">Nexus Watcher</MudText>
        <MudSpacer />

        <AuthorizeView>
            <Authorized Context="auth">
                @{
                    var user = auth.User;
                    var name = user.Identity?.Name ?? "Invocateur";
                    var roles = user.Claims
                        .Where(c => c.Type == "roles" || c.Type == "role") // Gère les deux cas
                        .Select(c => c.Value)
                        .Distinct()
                        .ToList();
                }

                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                    <MudText Typo="Typo.body2"><b>@name</b></MudText>
                    @if (roles.Any())
                    {
                        <MudChip T="string" Size="Size.Small" Color="Color.Secondary">
                            @string.Join(", ", roles)
                        </MudChip>
                    }
                    <!-- BOUTON DECONNEXION (Méthode Robuste via Href) -->
                    <MudButton Variant="Variant.Outlined" 
                               Color="Color.Inherit" 
                               Size="Size.Small" 
                               Href="authentication/logout"
                               Target="_top">
                        Déconnexion
                    </MudButton>
                </MudStack>
            </Authorized>
            <NotAuthorized>
                <!-- BOUTON CONNEXION (Méthode Robuste via Href) -->
                <MudButton Variant="Variant.Filled" 
                           Color="Color.Secondary" 
                           Href="@GetLoginUrl()"
                           Target="_top">
                    Connexion
                </MudButton>
            </NotAuthorized>
        </AuthorizeView>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    // On génère l'URL dynamiquement
    private string GetLoginUrl()
    {
        var returnUrl = Uri.EscapeDataString(Navigation.Uri);
        return $"authentication/login?returnUrl={returnUrl}";
    }
}