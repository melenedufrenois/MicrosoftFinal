@page "/champions/{Id:int}"
@using LoLProject.WebApp.Clients
@using LoLProject.WebApp.DTOs
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@inject LoLClient LoLClient
@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthStateProvider
@inject IJSRuntime JS

<PageTitle>@(champion?.Name ?? "Détails") - Wiki</PageTitle>



<div class="container mt-4 mb-5">
    <a href="champions" class="btn btn-sm btn-outline-secondary mb-3 border-0" style="color: #a09b8c;">
        <i class="bi bi-arrow-left"></i> Retour au Wiki
    </a>

    @if (champion == null)
    {
        <div class="d-flex flex-column align-items-center justify-content-center" style="height: 50vh;">
            <div class="spinner-border text-warning mb-3" role="status"></div>
            <p class="text-muted">Chargement des archives...</p>
        </div>
    }
    else
    {
        <div class="hextech-detail-card rounded mb-5">
            <div class="row g-0">
                <div class="col-lg-5 d-none d-lg-block">
                    <img src="@champion.ImageUrl" class="champ-bg-image" alt="@champion.Name">
                </div>
                <div class="col-lg-7">
                    <div class="card-body h-100 d-flex flex-column justify-content-center p-4 p-md-5">
                        <div class="d-lg-none text-center mb-4">
                            <img src="@champion.ImageUrl" class="rounded-circle border border-2 border-warning shadow" width="120" height="120" style="object-fit:cover;" alt="@champion.Name">
                        </div>
                        <h1 class="champ-name-detail mb-0">@champion.Name</h1>
                        <span class="champ-title-detail">@champion.Title</span>
                        <div class="lore-text mb-4">
                            <i class="bi bi-quote text-secondary fs-4 me-2"></i>
                            @champion.Description
                        </div>
                        @if (champion.Stats != null)
                        {
                            <div class="stats-container">
                                <h5 class="mb-3 pb-2" style="color: #c8aa6e; border-bottom: 1px solid #463714; font-family: serif; letter-spacing: 1px;">
                                    <i class="bi bi-activity me-2"></i>Données de Combat <small style="color: #a09b8c; font-size: 0.7em;">(Niv 1)</small>
                                </h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="stat-row"><span class="stat-label">Vie</span><span class="stat-value">@champion.Stats.Hp</span><div class="hextech-progress"><div class="hextech-progress-bar" style="width: @((double)champion.Stats.Hp / 700.0 * 100)%"></div></div></div>
                                        <div class="stat-row"><span class="stat-label">Attaque</span><span class="stat-value">@champion.Stats.AttackDamage</span><div class="hextech-progress"><div class="hextech-progress-bar" style="width: @((double)champion.Stats.AttackDamage / 80.0 * 100)%"></div></div></div>
                                        <div class="stat-row"><span class="stat-label">Vit. Att</span><span class="stat-value">@champion.Stats.AttackSpeed</span><div class="hextech-progress"><div class="hextech-progress-bar" style="width: @((double)champion.Stats.AttackSpeed / 1.0 * 100)%"></div></div></div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="stat-row"><span class="stat-label">Armure</span><span class="stat-value">@champion.Stats.Armor</span><div class="hextech-progress"><div class="hextech-progress-bar" style="width: @((double)champion.Stats.Armor / 50.0 * 100)%"></div></div></div>
                                        <div class="stat-row"><span class="stat-label">Res. Mag</span><span class="stat-value">@champion.Stats.SpellBlock</span><div class="hextech-progress"><div class="hextech-progress-bar" style="width: @((double)champion.Stats.SpellBlock / 50.0 * 100)%"></div></div></div>
                                        <div class="stat-row"><span class="stat-label">Portée</span><span class="stat-value">@champion.Stats.AttackRange</span><div class="hextech-progress"><div class="hextech-progress-bar" style="width: @((double)champion.Stats.AttackRange / 650.0 * 100)%"></div></div></div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h3 class="tips-section-title">
                    <i class="bi bi-chat-square-text-fill me-2"></i> Conseil de Guerre
                </h3>

                <AuthorizeView>
                    <Authorized>
                        <div class="add-tip-card rounded mb-4 shadow-sm">
                            <h5 class="text-gold mb-3" style="color: #c8aa6e; font-size: 1rem; text-transform: uppercase;">
                                <i class="bi bi-pencil-fill me-2"></i> Partager une astuce
                            </h5>
                            <textarea @bind="newTipContent" @bind:event="oninput" 
                                      class="form-control hextech-textarea mb-3" 
                                      rows="3" 
                                      placeholder="Un combo secret ? Un counter pick ? Partagez votre savoir..."></textarea>
                            <div class="d-flex justify-content-end">
                                <button class="btn btn-outline-warning" @onclick="PostTip" disabled="@string.IsNullOrWhiteSpace(newTipContent)">
                                    Publier le Tip
                                </button>
                            </div>
                        </div>
                    </Authorized>
                    <NotAuthorized>
                        <div class="alert alert-dark border border-secondary d-flex align-items-center mb-4" style="background-color: #010a13;">
                            <i class="bi bi-lock-fill fs-3 me-3 text-secondary"></i>
                            <div>
                                <strong>Zone restreinte.</strong><br/>
                                <a href="authentication/login" class="text-warning text-decoration-none">Connectez-vous</a> pour partager vos connaissances.
                            </div>
                        </div>
                    </NotAuthorized>
                </AuthorizeView>

                @if (champion.Tips != null && champion.Tips.Any())
                {
                    <div class="d-flex flex-column gap-3">
                        @foreach (var tip in champion.Tips.OrderByDescending(t => t.CreatedAt))
                        {
                            <div class="tip-item p-3 rounded position-relative">
                                <div class="d-flex justify-content-between align-items-start border-bottom border-secondary pb-2 mb-2" style="border-color: #1e2328 !important;">
                                    
                                    <div class="d-flex align-items-center gap-3">
                                        <div>
                                            <div class="tip-author">@tip.Author.Username</div>
                                            <div class="tip-time" style="font-size: 0.75rem;">
                                                @tip.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                            </div>
                                        </div>
                                    </div>
                                    
                                    @if (currentUserId.HasValue && currentUserId.Value == tip.Author.Id)
                                    {
                                        <button class="btn-square btn-square-danger" @onclick="() => RequestDelete(tip.Id)" title="Supprimer">
                                            <i class="bi bi-trash-fill small"></i>
                                        </button>
                                    }
                                </div>
                                <p class="tip-content mb-0">@tip.Content</p>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center p-5 text-muted border border-secondary rounded" style="border-style: dashed !important; border-color: #463714 !important;">
                        <i class="bi bi-wind fs-1 d-block mb-3"></i>
                        Aucune astuce pour le moment.<br/>Soyez le premier à écrire l'histoire !
                    </div>
                }
            </div>
        </div>
    }
</div>

<div class="modal fade" id="deleteTipModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modal-hextech-content">
            <div class="modal-header modal-hextech-header">
                <h5 class="modal-title text-danger text-uppercase fw-bold">
                    <i class="bi bi-exclamation-diamond-fill me-2"></i> Suppression
                </h5>
                <button type="button" class="btn-close btn-close-hextech" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center py-4">
                <p class="fs-5 text-light mb-0">
                    Voulez-vous vraiment détruire ce savoir ancestral ?<br/>
                    <span class="text-muted small">(Cette action est irréversible)</span>
                </p>
            </div>
            <div class="modal-footer modal-hextech-footer justify-content-center">
                <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-danger px-4 fw-bold" @onclick="ConfirmDelete">
                    Confirmer
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int Id { get; set; }
    private ChampionDetailDto? champion;
    private string newTipContent = "";
    private Guid? currentUserId;
    private int tipIdToDelete;

    protected override async Task OnInitializedAsync()
    {
        var myProfile = await LoLClient.GetMyDashboardAsync();
        if (myProfile != null) currentUserId = myProfile.Id;
        await LoadData();
    }

    private async Task LoadData()
    {
        champion = await LoLClient.GetChampionDetailAsync(Id);
    }

    private async Task PostTip()
    {
        if (string.IsNullOrWhiteSpace(newTipContent)) return;
        bool success = await LoLClient.AddTipAsync(Id, newTipContent);
        if (success) { newTipContent = ""; await LoadData(); }
    }

    private void RequestDelete(int tipId)
    {
        tipIdToDelete = tipId;
        JS.InvokeVoidAsync("eval", "new bootstrap.Modal(document.getElementById('deleteTipModal')).show()");
    }

    private async Task ConfirmDelete()
    {
        bool success = await LoLClient.DeleteMyTipAsync(tipIdToDelete);
        if (success)
        {
            await LoadData();
            await JS.InvokeVoidAsync("eval", "bootstrap.Modal.getInstance(document.getElementById('deleteTipModal')).hide()");
        }
    }
}