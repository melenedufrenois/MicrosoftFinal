@page "/dashboard"
@using LoLProject.ApiService.DTOs
@using LoLProject.WebApp.Clients
@using LoLProject.WebApp.DTOs
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject LoLClient LoLClient

<PageTitle>Dashboard - Statistiques</PageTitle>

@{
    string ddragonVer = "14.23.1";
    string champCdn = $"https://ddragon.leagueoflegends.com/cdn/{ddragonVer}/img/champion/";
    string iconCdn = $"https://ddragon.leagueoflegends.com/cdn/{ddragonVer}/img/profileicon/";
}


<div class="container mt-5 pb-5">
    @if (isLoading)
    {
        <div class="d-flex justify-content-center align-items-center" style="height: 50vh;">
            <div class="spinner-border text-warning" style="width: 3rem; height: 3rem;"></div>
        </div>
    }
    else if (dashboardData?.Summoner == null)
    {
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="hextech-container p-5 text-center rounded">
                    <div class="mb-4 text-warning display-4">
                        <i class="bi bi-link-45deg"></i>
                    </div>
                    <h2 class="text-uppercase mb-3" style="letter-spacing: 2px; color: #c8aa6e;">Synchronisation Requise</h2>
                    <p class="text-light mb-4">
                        Liez votre compte Riot Games pour accéder à vos statistiques.
                    </p>
                    
                    <div class="card bg-transparent border-0">
                        <div class="card-body">
                            <div class="input-group mb-3">
                                <input type="text" @bind="gameName" class="form-control hextech-input form-control-lg" placeholder="GameName (ex: Faker)">
                                <span class="input-group-text hextech-input border-start-0 border-end-0 text-hextech-gold">#</span>
                                <input type="text" @bind="tagLine" class="form-control hextech-input form-control-lg" placeholder="Tag" style="max-width: 100px;">
                            </div>
                            
                            <button class="btn btn-hextech w-100 py-2 fw-bold" @onclick="LinkAccount" disabled="@isLinking">
                                @if(isLinking) {
                                    <span><span class="spinner-border spinner-border-sm me-2"></span> Recherche...</span>
                                } else {
                                    <span><i class="bi bi-plug-fill me-2"></i> Connecter le Compte</span>
                                }
                            </button>

                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-danger mt-3 bg-transparent border border-danger text-danger">
                                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @errorMessage
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        var sum = dashboardData.Summoner;

        <div class="hextech-container rounded mb-4 p-4 d-flex align-items-center gap-4">
            <div style="position: relative;">
                <img src="@($"{iconCdn}{sum.ProfileIconId}.png")" class="rounded-circle border border-2 border-warning" width="100">
                <span class="badge bg-dark border border-warning position-absolute bottom-0 start-50 translate-middle-x">@sum.SummonerLevel</span>
            </div>
            <div>
                <h1 class="m-0 fw-bold text-light">@sum.GameName <span class="text-hextech-dim fw-light">#@sum.TagLine</span></h1>
                <div class="text-warning small text-uppercase">EU West • En Ligne</div>
            </div>
            <div class="ms-auto">
                <button class="btn btn-sm btn-outline-secondary" @onclick="UnlinkAccount">Délier</button>
            </div>
        </div>

        @if (stats?.Overview != null)
        {
            // On crée une variable locale 'ov' pour s'assurer que Blazor ne perde pas la référence
            var ov = stats.Overview;

            <div class="row g-3 mb-5">
                <div class="col-md-3">
                    <div class="stat-card-global rounded">
                        @if (ov.SoloQueueTier == "Unranked")
                        {
                            <h2 class="text-hextech-dim">Unranked</h2>
                            <label>Classé Solo/Duo</label>
                        }
                        else
                        {
                            // Utilisation de ov ici, sûr à 100%
                            <h2 class="@GetTierClass(ov.SoloQueueTier)">
                                @ov.SoloQueueTier @ov.SoloQueueRank
                            </h2>
                            
                            <div class="d-flex justify-content-center gap-2 align-items-center mb-1">
                                <span class="text-white fw-bold">@ov.SoloQueueLp LP</span>
                                <span class="text-hextech-dim" style="font-size: 0.8rem;">|</span>
                                @{
                                    int totalRanked = ov.TotalRankedWins + ov.TotalRankedLosses;
                                    int winrateRanked = totalRanked > 0 ? (int)((double)ov.TotalRankedWins / totalRanked * 100) : 0;
                                }
                                <span class="@(winrateRanked >= 50 ? "text-success" : "text-danger") small">
                                    @winrateRanked% WR
                                </span>
                            </div>
                            
                            <label>@ov.TotalRankedWins V - @ov.TotalRankedLosses D</label>
                        }
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="stat-card-global rounded">
                        <h2 class="@(ov.WinRate >= 50 ? "text-success" : "text-danger")">
                            @ov.WinRate%
                        </h2>
                        <label>Winrate (20 derniers)</label>
                        <small class="text-hextech-gold mt-1">@ov.Wins V - @ov.Losses D</small>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="stat-card-global rounded">
                        <h2 class="text-warning">@ov.AvgKda</h2>
                        <label>KDA (@ov.AvgKills / @ov.AvgDeaths / @ov.AvgAssists)</label>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="stat-card-global rounded">
                        <h2 class="text-info">@ov.AvgCsPerMinute</h2>
                        <label>CS / Minute</label>
                    </div>
                </div>
                
                </div>

            <h4 class="text-warning text-uppercase border-bottom border-secondary pb-2 mb-3">
                <i class="bi bi-clock-history me-2"></i>Historique des matchs
            </h4>

            <div class="d-flex flex-column gap-2">
                @foreach (var match in stats.MatchHistory)
                {
                    var s = match.Stats;
                    var kda = s.Deaths == 0 ? "Perfect" : $"{Math.Round((double)(s.Kills + s.Assists) / s.Deaths, 2):0.00}";
                    
                    double csPerMin = match.Duration.TotalMinutes > 0 
                        ? s.TotalCs / match.Duration.TotalMinutes 
                        : 0;

                    <div class="match-row rounded @(s.Win ? "match-win" : "match-loss")">
                        
                        <div class="game-meta d-flex flex-column">
                            <span class="game-result @(s.Win ? "text-win" : "text-loss")">
                                @(s.Win ? "VICTOIRE" : "DÉFAITE")
                            </span>
                            <span class="text-hextech-light">@match.GameMode</span>
                            <span class="text-hextech-dim">@match.Duration.ToString(@"mm\:ss")</span>
                            <span class="text-hextech-dim" style="font-size: 0.75rem;">@match.GameDate.ToString("dd/MM")</span>
                        </div>

                        <div class="champ-section">
                            <img src="@(champCdn + s.ChampionName + ".png")" class="champ-img shadow" alt="@s.ChampionName">
                            <div class="d-flex flex-column">
                                <span class="champ-name">@s.ChampionName</span>
                                <span class="champ-lvl">Niveau @s.ChampLevel</span>
                            </div>
                        </div>

                        <div class="kda-section">
                            <div class="kda-nums">
                                @s.Kills / <span class="text-danger">@s.Deaths</span> / @s.Assists
                            </div>
                            <div class="kda-calc">@kda KDA</div>
                        </div>

                        <div class="stats-grid ms-4">
                            <div class="stat-item" title="Total Sbires + Monstres">
                                <i class="bi bi-bullseye"></i> 
                                <span>
                                    <strong>@s.TotalCs</strong> CS 
                                    <span class="text-hextech-dim small">(@csPerMin.ToString("0.0")cs/m)</span>
                                </span>
                            </div>
                            
                            <div class="stat-item" title="Or Gagné">
                                <i class="bi bi-coin text-warning"></i> 
                                <span>@((s.GoldEarned / 1000.0).ToString("0.0"))k Gold</span>
                            </div>
                            
                            <div class="stat-item" title="Dégâts aux Champions">
                                <i class="bi bi-sword text-danger"></i> 
                                <span>@s.TotalDamageDealtToChampions.ToString("N0") Dmg</span>
                            </div>
                            
                            <div class="stat-item" title="Dégâts aux Tours">
                                <i class="bi bi-bricks text-info"></i> 
                                <span>@s.DamageDealtToBuildings.ToString("N0") Tours</span>
                            </div>
                            
                            <div class="stat-item" title="Dégâts Subis">
                                <i class="bi bi-shield-check"></i> 
                                <span>@s.TotalDamageTaken.ToString("N0") Tanké</span>
                            </div>
                            
                            <div class="stat-item">
                                <i class="bi bi-person-badge"></i>
                                <span class="text-hextech-gold text-uppercase" style="font-size: 0.8rem; letter-spacing: 1px;">
                                    @s.TeamPosition
                                </span>
                            </div>
                        </div>

                    </div>
                }
            </div>
        }
        else if (isLoadingStats)
        {
            <div class="text-center text-light mt-5">
                <div class="spinner-border text-warning mb-3"></div>
                <p>Analyse des 20 dernières parties...</p>
            </div>
        }
    }
</div>

@code {
    private AppUserDto? dashboardData;
    private DashboardStatsResponseDto? stats;
    
    private bool isLoading = true;
    private bool isLoadingStats = false;
    
    private bool isLinking = false;
    private string gameName = "";
    private string tagLine = "";
    private string errorMessage = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        dashboardData = await LoLClient.GetMyDashboardAsync();
        isLoading = false;

        if (dashboardData?.Summoner != null)
        {
            isLoadingStats = true;
            StateHasChanged();
            stats = await LoLClient.GetDashboardStatsAsync();
            isLoadingStats = false;
        }
    }

    private async Task LinkAccount()
    {
        isLinking = true;
        errorMessage = "";
        
        if (string.IsNullOrWhiteSpace(gameName) || string.IsNullOrWhiteSpace(tagLine))
        {
            errorMessage = "Veuillez remplir les deux champs.";
            isLinking = false;
            return;
        }

        bool success = await LoLClient.LinkSummonerAsync(gameName, tagLine);
        
        if (success)
        {
            await LoadData();
        }
        else
        {
            errorMessage = "Invocateur introuvable ou erreur API. Vérifiez l'orthographe.";
        }
        isLinking = false;
    }
    
    private async Task UnlinkAccount()
    {
        if (await LoLClient.UnlinkMySummonerAsync())
        {
            if (dashboardData != null) 
            {
                dashboardData.Summoner = null;
                stats = null;
            }
        }
        else
        {
            Console.WriteLine("Erreur lors de la déconnexion du compte Riot.");
        }
    }
    
    private string GetTierClass(string? tier)
    {
        if (string.IsNullOrEmpty(tier)) return "tier-UNRANKED";
        return $"tier-{tier.ToUpper()}";
    }
}